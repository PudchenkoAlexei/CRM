{
  "name": "crm-project",
  "version": "1.0.0",
  "description": "CRM application",
  "type": "module",
  "scripts": {
    "fmt": "prettier --write \"**/*.{js,json,md}\"",
    "fmt:check": "prettier --check \"**/*.{js,json,md}\"",
    "lint": "eslint .",
    "fix": "eslint --fix",
    "test": "echo \"No tests implemented yet\" && exit 0",
    "build": "echo 'No build step required for Node.js app'"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run fmt",
      "pre-push": "npm run lint && npm run fmt"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "private": true,
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "morgan": "^1.10.0"
  }
}
