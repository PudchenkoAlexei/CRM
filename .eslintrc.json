{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "import/extensions": ["error", "ignorePackages"],
    "import/order": [
      "warn",
      {
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "no-alert": "off",
    "no-console": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id", "_doc"]
      }
    ],
    "consistent-return": "off" 
  }
}
