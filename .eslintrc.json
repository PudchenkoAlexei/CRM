{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended",  // Додаємо правило для React
    "prettier"
  ],
  "plugins": [
    "prettier",
    "react"  // Додаємо плагін React
  ],
  "rules": {
    "prettier/prettier": "error",
    "import/extensions": ["error", "ignorePackages"],
    "import/order": [
      "warn",
      {
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "no-alert": "off",
    "no-console": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id", "_doc"]
      }
    ],
    "consistent-return": "off",
    "react/prop-types": "off",  // Оскільки ви, можливо, не використовуєте prop-types
    "react/react-in-jsx-scope": "off"  // Якщо використовуєте React 17 або новіше
  }
}
